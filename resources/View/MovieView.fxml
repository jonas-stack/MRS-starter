<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.mrs.GUI.Controller.MovieViewController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <ListView fx:id="lstMovies" prefHeight="218.0" prefWidth="470.0" GridPane.rowIndex="2" />
      <TextField fx:id="txtMovieSearch" GridPane.rowIndex="1" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="txtTitle" />
            <TextField fx:id="txtYear" />
            <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#createNewMovie" text="CreateNewMovie" />
         </children>
      </HBox>
   </children>
</GridPane>
